@model IEnumerable<MioBarber.Models.Cita>

@{
    ViewBag.Title = "Index";
}
<hr />

<div class="card bg-light mb-2" style="max-width: 98rem;">
    <h2>Citas Agendadas</h2>


    <table class="table table-hover">
        <tr>
            <th>
                <label>Cliente</label>
            </th>
            <th>
                <label>Telefono</label>
            </th>
            <th>
                <label>Corte</label>
            </th>
            <th>
                <label>Precio</label>
            </th>
            <th>
                <label>Barbero</label>
            </th>
            <th>
                <label>Fecha</label>
            </th>
            <th>
                <label>Hora</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Corte.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Corte.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Barber.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Day)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info border-dark" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-light border-dark" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger border-dark" })
        </td>
    </tr>
        }

    </table>
</div>