@model MioBarber.Models.Cita

@{
    ViewBag.Title = "Create";
}
<hr />
<h2 class="text-center">Cortes</h2>

<div id="carouselExampleIndicators" class="carousel slide align-items-center" data-ride="carousel">
    <div class="carousel-inner align-items-center">
        <div class="carousel-item active align-items-center">
            <img class="d-block w-20 align-items-center" src="~/Content/Img/ManBun.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-20" src="~/Content/Img/MessyPomp.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-20" src="~/Content/Img/PeakyBlind.png" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-20" src="~/Content/Img/Pompadour.png" alt="Forth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-20" src="~/Content/Img/SkinFade.png" alt="Five slide">
        </div>
        <div class="carousel-item text-center">
            <img class="d-block w-20" src="~/Content/Img/SlickBack.png" alt="Six slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />

<h2 class="text-center">Barberos</h2>
<p></p>
<div>
    <div class="row">
        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h3>NovaFeroz</h3>
                <img class="card-img-top" src="~/Content/Img/barbero1.jpg" alt="Card image cap">
            </div>
            <div class="card-body">
                <h5 class="card-title">Experiencia: 3 año</h5>
                <p class="card-text">Buen trato especialista en corte para niños y buena gente.</p>
            </div>
        </div>

        <hr />

        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h3>Danielito</h3>
                <img class="card-img-top" src="~/Content/Img/barbero2.jpg" alt="Card image cap">
            </div>
            <div class="card-body">
                <h5 class="card-title">Experiencia: 5 años</h5>
                <p class="card-text">Especialista en cualquier corte y diseño de cabello.</p>
            </div>
        </div>

        <hr />

        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h3>Trix</h3>
                <img class="card-img-top" src="~/Content/Img/barbero3.jpg" alt="Card image cap">
            </div>
            <div class="card-body">
                <h5 class="card-title">Experiencia: 1 año</h5>
                <p class="card-text">Buen trato con las personas muy alegre especialista en los fade y coloracion de cabello.</p>
            </div>
        </div>
    </div>
</div>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Cita</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Day, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" name="Day" value="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Time,"Hora de la Cita", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="time" name="Time" value="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BarberId, "BarberId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("BarberId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BarberId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CorteId, "CorteId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CorteId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CorteId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
